  <property name="db.url" value="-Durl=jdbc:oracle:thin:@172.25.14.21:1521:c21u1" />
  <property name="db.user" value="-Dusername=ge_tmp_dev" />
  <property name="db.password" value="-Dpassword=ge_tmp_devpwd" />
  
  <property name="maven.settings" value="--settings settings.xml" />
  <property name="liquibase.changeLogFile" value="-DchangeLogFile=db/upgrade-db.xml" />

  <target name="init">
    <echo>
ant build: to build the package
ant deploy: to build the package and deploy it into maven-repository    
    </echo>
